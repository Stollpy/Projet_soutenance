{% extends 'user/dashboard/base.html.twig' %}

{% block title %}
    Dashboard  - Edit profil
{% endblock %}

{% block fonctionalite %}
    <div class="container-fluid">
        <div class="container">
            <div class="row my-4">
                <div class="col-12">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success mj-alert" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    {{ form_start(form) }}
                    {{ form_label(form.firstname) }}
                    <div class="input-group">
                        {{ form_widget(form.firstname, {'attr': {'readonly': true}}) }}
                        <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="firstname">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>

                    {{ form_label(form.lastname) }}
                    <div class="input-group mb-3">
                        {{ form_widget(form.lastname, {'attr': {'readonly': true}}) }}
                        <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="lastname">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>

                    <div class="row mb-3">

                        <div class="col-6">
                            {{ form_label(form.email) }}
                            <div class="input-group">
                                {{ form_widget(form.email, {'attr': {'readonly': true}}) }}
                                <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="email">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-6">
                            {{ form_label(form.phone) }}
                            <div class="input-group">
                                {{ form_widget(form.phone, {'attr': {'readonly': true}}) }}
                                <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="phone">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    {{ form_label(form.addressline1) }}
                    <div class="input-group">
                        {{ form_widget(form.addressline1, {'attr': {'readonly': true}}) }}
                        <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="addressline1">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>

                    {{ form_label(form.addressline2) }}
                    <div class="input-group">
                        {{ form_widget(form.addressline2, {'attr': {'readonly': true, 'id': 'edit_address2'}}) }}
                        <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="addressline2">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>

                    <div class="row">

                        <div class="col-6">
                            {{ form_label(form.zipcode) }}
                            <div class="input-group">
                                {{ form_widget(form.zipcode, {'attr': {'readonly': true}}) }}
                                <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="zipcode">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-6">
                            {{ form_label(form.city) }}
                            <div class="input-group">
                                {{ form_widget(form.city, {'attr': {'readonly': true}}) }}
                                <button class="btn btn-outline-mj-secondary edit-btn" type="button" data-input-id="city">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="my-3">
                        <a href="#">Je souhaite changer mon mot de passe</a>
                    </div>

                    <input type="submit" class="btn btn-outline-primary mj-button-container-shop my-3 shadow mt-3" value="Valider les modifications">
                    {{ form_end(form) }}
                </div>
                <div class="col-12">
                    <!-- Declenchement de modal de suppression -->
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal" data-user-id="{{ app.user.id }}">
                        Supprimer mon compte
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="delete-modal-label" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="delete-modal-label">Alerte</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="fw-bold lead">Attention, vous essayez de supprimer votre compte. Cette action est irreversible,
                                    toutes les donnees associees a votre compte y compris historique de commandes seront definitivement effacees.
                                    etes vous sur de vouloir continuer?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Annuler</button>
                                    <a href="" type="button" class="btn btn-danger" id="deleteUserButton">Oui, supprimer mon compte.</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Custom JS -->
    <script src="{{ asset('assets/js/editUser.js') }}"></script>
{% endblock %}
{% block footer %}
{% endblock %}