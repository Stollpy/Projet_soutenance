{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid align-items-center justify-content-center d-flex py-5 bg-img">
        <div class="container px-1 px-md-5">
            <form method="post" id="login-form">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="text-center">
                    <!--<img src="{{ asset('assets/img/mj-icons/IllustrationMarieJeanne.png') }}" height="400px"  alt="Illustration marie jeanne" class="mx-auto d-block img-fluid w-100">-->
                    <p class="fw-bold lead mj-title-bookmarks mb-3">Connexion</p>
                    <label for="inputEmail">Adresse mail</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3"
                           required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mb-3" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-outline-mj-secondary" type="submit">Se connecter</button>
                </div>

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
